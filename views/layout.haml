    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.icon-feather.brand{:href => '/'} Notes
          .btn-group.pull-right
            %a.btn.dropdown-toggle{:href => '#',  "data-toggle" => "dropdown"}
